{
  "name": "n8n-nodes-3cx-call-control",
  "version": "2.0.0",
  "description": "Enterprise-grade n8n integration for 3CX Phone Systems with advanced call control and monitoring capabilities",
  "keywords": [
    "n8n-community-node-package",
    "3cx",
    "pbx",
    "call-control",
    "voip",
    "telephony",
    "workflow-automation",
    "call-center",
    "ivr",
    "webhook"
  ],
  "license": "MIT",
  "homepage": "https://github.com/your-org/3cx-n8n-integration#readme",
  "author": {
    "name": "3CX n8n Integration Team",
    "email": "support@your-company.com",
    "url": "https://your-company.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/3cx-n8n-integration.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/3cx-n8n-integration/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "credentials/**/*",
    "nodes/**/*",
    "templates/**/*",
    "docs/**/*",
    "README.md",
    "LICENSE",
    "howto.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:dev": "tsc --watch",
    "build:prod": "tsc -p tsconfig.prod.json && npm run copy-assets",
    "copy-assets": "copyfiles -u 1 \"credentials/**/*\" \"nodes/**/*.{png,svg,json}\" \"templates/**/*\" dist/",
    "dev": "npm run build:dev",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:production": "ts-node tests/production-validation-suite.ts",
    "validate:production": "npm run test:production",
    "docs:build": "typedoc --out docs/api src/",
    "docs:serve": "http-server docs/api -p 8080",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build:prod && npm test",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major"
  },
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/3CXCallControlApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/3CXCallReceiver/3CXCallReceiver.node.js",
      "dist/nodes/3CXCallMonitor/3CXCallMonitor.node.js",
      "dist/nodes/3CXCallControl/3CXCallControl.node.js",
      "dist/nodes/3CXCallData/3CXCallData.node.js"
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "events": "^3.3.0",
    "joi": "^17.11.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "chai": "^4.3.10",
    "copyfiles": "^2.4.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "n8n-workflow": "^1.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "n8n-workflow": ">=1.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "utils/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/your-org"
  },
  "config": {
    "3cx": {
      "supportedVersions": [
        "20.x"
      ],
      "apiVersion": "2.0",
      "minNodeVersion": "18.0.0"
    }
  }
}